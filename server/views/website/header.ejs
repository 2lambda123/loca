<div class="main-menu-bar">
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/" title="<%=config.website.product.slogan%>"><%=config.website.product.name%></a>
            </div>
            <div class="collapse navbar-collapse">
                <% if (account) { %>
                    <% if (account.realm && view!== "selectrealm") { %>
                <ul class="nav navbar-nav">
                    <li><a class="nav-action" data-id="dashboard" href="#"><i class="fa fa-tachometer"></i> Tableau de bord</a></li>
                    <li><a class="nav-action" data-id="rent" href="#"><i class="fa fa-money"></i> Loyers</a></li>
                    <li><a class="nav-action" data-id="occupant" href="#"><i class="fa fa-group"></i> Locataires</a></li>
                    <li><a class="nav-action" data-id="property" href="#"><i class="fa fa-key"></i> Biens</a></li>
                    <li><a class="nav-action" data-id="owner" href="#"><i class="fa fa-user"></i> Bailleur</a></li>
                </ul>
                    <% } %>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <% if (account.realm && account.realm.name != '__default_' && account.realms.length>=1) { %>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%= account.firstname + ' ' + account.lastname %> @<%= account.realm.name %> <span class="caret"></span></a>
                        <% } else { %>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%= account.firstname + ' ' + account.lastname %><span class="caret"></span></a>
                        <% } %>
                        <ul class="dropdown-menu" role="menu">
                        <% if (view!== "selectrealm" && account.realms) { %>
                            <% if (account.realms.length>1) { %>
                                <% for (index=0; index<account.realms.length; index++) { %>
                                    <li>
                                        <a href="#" class='realm-action' data-id="<%=account.realms[index]._id%>"><i class="fa fa-building-o"></i> <%= account.realms[index].name %> </a>
                                    </li>
                                <% } %>
                            <% } %>
                            <!--li><a href="/selectrealm"><i class="fa fa-plus"></i> Nouvelle organisation</a></li>
                            <li role="separator" class="divider"></li-->
                        <% } %>
                            <li><a href="/logout"><i class="fa fa-sign-out"></i> Déconnexion</a></li>
                        </ul>
                    </li>
                </ul>
                <% } else if (view !== "login") { %>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/logout"><i class="fa fa-sign-in"></i> Se connecter</a></li>
                    </ul>
                <% } %>
            </div><!--/.nav-collapse -->
        </div>
    </div>
</div>
