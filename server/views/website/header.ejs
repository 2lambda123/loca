<div class="main-mini-menu-bar">
    <div class="container">
        <div class="row">
            <% if (view !== "website" && view !== "login" && view !== "signup" && view !== "selectrealm") { %>
            <div class="col-xs-12 text-center">
                <div class="main-mini-menu-bar-title" data-id="dashboard"><i class="fa fa-tachometer"></i> Tableau de bord</div>
                <div class="main-mini-menu-bar-title" data-id="rent"><i class="fa fa-money"></i> Loyers</div>
                <div class="main-mini-menu-bar-title" data-id="occupant"><i class="fa fa-group"></i> Locataires</div>
                <div class="main-mini-menu-bar-title" data-id="property"><i class="fa fa-key"></i> Biens</div>
                <div class="main-mini-menu-bar-title" data-id="owner"><i class="fa fa-user"></i> Bailleur</div>
            </div>
            <% } else if (view !== "selectrealm") { %>
            <div class="col-xs-12">
                <div class="clearfix">
                    <div class="pull-left">
                        <div class="main-mini-menu-bar-brand">
                            <a href="/"><%=config.website.product.name%></a>
                        </div>
                    </div>
                    <% if (view !== "login") { %>
                    <a class="pull-right btn btn-primary" href="/login" role="button"><i class="fa fa-sign-in"></i> Se connecter</a>
                    <% } %>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>
