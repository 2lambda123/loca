<!-- HANDLEBAR TEMPLATES -->
<script id="view-occupant-list-row-template" type="text/x-handlebars-template">
    <div id="{{_id}}" class="list-row card">
        <div class="list-col">
            {{#if terminationDate}}
            <div class="list-label list-value text-danger hidden-xs"><%= t('Lease terminated') %></div>
            {{else}}
            <div class="list-label list-value text-success hidden-xs"><%= t('Lease in progress') %></div>
            {{/if}}
            <div class="clearfix">
                <div class="list-avatar-col pull-left">
                    {{#if isCompany}}
                        <i class="fa fa-group fa-2x"></i>
                    {{else}}
                        <i class="fa fa-user fa-2x"></i>
                    {{/if}}
                </div>
                <div class="list-title list-value pull-left">
                    {{name}}
                </div>
            </div>
        </div>
        <div class="list-col">
            <div class="hidden-xs"><%= t('Lease contract') %></div>
            <div>
                {{#if terminationDate}}
                    {{formatDate beginDate}} <i class="fa fa-long-arrow-right"></i> {{formatDate terminationDate}}
                {{else}}
                    {{formatDate beginDate}} <i class="fa fa-long-arrow-right"></i> {{formatDate endDate}}
                {{/if}}
            </div>
            <div class="hidden-xs">
                {{#each properties}}
                    <div>{{Image property.type}} {{propertyName property.type}}</div>
                {{/each}}
            </div>
            <div class="visible-xs clearfix">
                <div class="pull-left">
                    {{#each properties}} {{Image property.type}} {{propertyName property.type}}{{#unless @last}} - {{/unless}} {{/each}}
                </div>
                <div class="pull-right">
                    {{#if terminationDate}}
                    <div class="list-label list-value text-danger"><%= t('Lease terminated') %></div>
                    {{else}}
                    <div class="list-label list-value text-success"><%= t('Lease in progress') %></div>
                    {{/if}}
                </div>
            </div>
        </div>
        <div class="list-selection-overlay"></div>
    </div>
</script>

<script id="view-occupant-list-content-template" type="text/x-handlebars-template">
    {{#each rows}}
        {{> view-occupant-list-row-template}}
    {{/each}}
</script>

<script id="view-occupant-selected-list-template" type="text/x-handlebars-template">
    {{#each rows}}
        <a href="#" id="{{_id}}" data-id="remove-item-from-selection" class="list-group-item clearfix user-action">
            <div class="pull-left">{{name}}</div>
            <div class="pull-right fa fa-times text-right"></div>
        </div>
    {{/each}}
</script>
<!-- /HANDLEBAR TEMPLATE -->
